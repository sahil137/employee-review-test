<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required Meta Tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Assign Review</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header Partial -->
    <%- include('_header')%>

    <div style="display: flex; justify-content: space-around">
      <div class="mt-5 pt-3 border border-dark" style="width: 40%">
        <div class="mx-auto mt-3 p-3" style="width: 450px">
          <h2>Assign Review to Employee</h2>
        </div>

        <div class="m-4 p-4" style="width: 85%">
          <form
            action="/employee/admin/assign-review"
            style="
              display: flex;
              justify-content: center;
              align-items: center;
              flex-direction: column;
            "
            method="post"
          >
            <div class="mb-4">
              <h4>Employee</h4>
              <select class="form-select" name="employee">
                <!-- go through every user from req.user -->
                <% for(user of users){ %>
                <option value="<%= user.id %>"><%= user.name %></option>
                <% } %>
              </select>
            </div>

            <div>
              <h4>Reviewer</h4>
              <select class="form-select" name="reviewer">
                <% for(user of users){ %>
                <option value="<%= user.id %>"><%= user.name %></option>
                <% } %>
              </select>
            </div>

            <div
              style="display: flex; justify-content: center; margin-top: 20px"
            >
              <button type="submit" class="btn-sm btn-primary">Assign</button>
            </div>
          </form>
        </div>
      </div>

      <div class="mt-5 pt-3 border border-dark" style="width: 40%">
        <div class="mx-auto mt-3" style="width: 200px">
          <h2>Make Admin</h2>
        </div>

        <div class="m-4 p-4" style="width: 85%">
          <form
            style="
              display: flex;
              justify-content: center;
              align-items: center;
              flex-direction: column;
            "
            action="/employee/admin/make-admin"
            method="post"
          >
            <select
              class="form-select"
              aria-label="Default select example"
              name="adminName"
            >
              <% for(user of users){ %>
              <option value="<%= user.id %>"><%= user.name %></option>
              <% } %>
            </select>
          </form>
          <div style="display: flex; justify-content: center; margin-top: 38%">
            <button type="submit" class="btn-sm btn-primary">Make Admin</button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
